[module/bspwm]
type = internal/xworkspaces

icon-1 = I; 
icon-2 = II; 
icon-3 = III; 
icon-4 = IV; 
icon-5 = V; 
icon-6 = VI; 
icon-7 = VII; 7
icon-8 = VIII; 8
icon-9 = IX; 9
icon-0 = X; 
icon-default = -

; Only show workspaces defined on the same output as the bar
;
; Useful if you want to show monitor specific workspaces
; on different bars
;
; Default: false
pin-workspaces = true

; Create click handler used to focus desktop
; Default: true
enable-click = false

; Create scroll handlers used to cycle desktops
; Default: true
enable-scroll = false
format = <label-monitor> <label-state>

label-monitor = " %name%"
label-monitor-foreground = ${colors.xcolor8}

label-active = "%icon% "
label-active-foreground = ${colors.xcolor4}
/*label-active-background = ${xrdb:color7}*/

label-occupied = " %name% "
label-occupied-foreground = ${colors.xcolor7}

label-empty = " %name% "
label-empty-foreground = ${colors.xcolor8}

label-separator = ""

