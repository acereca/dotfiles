[module/mpv]
type = custom/script

exec = /bin/bash ~/.config/polybar/mpv.sh
exec-if = pgrep -x mpv
interval = 1

format = <label>
label = "   %output%"
label-font = 2
label-padding = 1
label-foreground = ${colors.xcolor7}


[module/gpu]
type = custom/script
exec = nvidia-smi --format=csv --query-gpu=utilization.gpu | tail -1 | awk '{print $1}'
interval = 3

label = "  %output%% "
label-foreground = ${colors.xcolor15}
label-background = ${colors.xcolor3}

