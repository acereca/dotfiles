! urxvt
URxvt*geometry:                115x40

URxvt*font: xft:Droid Sans Mono for Powerline:pixelsize=18:antialias=true:hinting=true,xft:FontAwesome;pixelsize=17
URxvt*boldFont: xft:Droid Sans Mono for Powerline:bold:pixelsize=17:antialias=true:hinting=true
URxvt.letterSpace: -1
URxvt*depth:                32
URxvt*borderless: 1
URxvt*scrollBar:            false
URxvt*saveLines:  2000
!URxvt.transparent:      true
!URxvt*.shading: 30

! redo extra bindings
URxvt.keysym.Home: \033[H
URxvt.keysym.End: \033[F
URxvt.keysym.Del: \033[3~

!! perl extensions
!!URxvt.perl-ext-common:      default,resize-font
URxvt.perl-ext-common:      default,clipboard,resize-font,url-select,keyboard-select
URxvt.url-select.launcher:  firefox
URxvt.url-select.underline: true
URxvt.url-select.button:    1
URxvt.keysym.M-u:           perl:url-select:select_next
URxvt.keysym.M-Escape:      perl:keyboard-select:activate
URxvt.keysym.M-s:           perl:keyboard-select:search

! enable clipboard
URxvt.keysym.C-v:   perl:clipboard:paste
URxvt.keysym.C-c:   perl:clipboard:copy

URxvt.resize-font.smaller: C-Down
URxvt.resize-font.bigger: C-Up
URxvt.resize-font.reset: C-0

! disable the stupid ctrl+shift 'feature'
URxvt.iso14755: false
URxvt.iso14755_52: false

!urxvt color scheme:
URxvt*background: [90]#222e3a
!URxvt*background: #222e3a
URxvt*foreground: #DEDEDE

URxvt*cursorColor: #ff8a00

URxvt*colorUL: #86a2b0

! black
URxvt*color0  : #222e3a
URxvt*color8  : #555753
! red
URxvt*color1  : #CC0000
URxvt*color9  : #EF2929
! green
URxvt*color2  : #4E9A06
URxvt*color10 : #8AE234
! yellow
URxvt*color3  : #C4A000
URxvt*color11 : #FCE94F
! blue
URxvt*color4  : #3465A4
URxvt*color12 : #729FCF
! magenta
URxvt*color5  : #75507B
URxvt*color13 : #AD7FA8
! cyan
URxvt*color6  : #06989A
URxvt*color14 : #34E2E2
! white
URxvt*color7  : #D3D7CF
URxvt*color15 : #EEEEEC
